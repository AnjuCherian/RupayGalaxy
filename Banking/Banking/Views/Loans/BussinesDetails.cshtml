@model Banking.Models.UserDetail.BussinesLoanDetail

@{
    ViewBag.Title = "BussinesLoanDetails";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@using (Html.BeginForm("BankDetail", "Loans", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="form-horizontal">
                <h3 style="font-family:'Times New Roman'">Bussines Loan Details</h3>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="number" class="form-control" name="Age" min="18" max="60" required>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TurnOver, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <h6 style="font-family:'Times New Roman';color:red">Turn over should be in greater then 150000</h6>
                        <input type="number" class="form-control" name="TurnOver" min="150000" required>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <h6 style="font-family:'Times New Roman';color:red">Amount should be in Rupees</h6>
                        <input type="number" class="form-control" name="Amount" required>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Tenure, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="number" class="form-control" name="Tenure" min="1" max="30" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary" value="Submit" style="margin-top: 13px" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="single-service-area d-flex mb-100 wow fadeInUp" data-wow-delay="200ms">
                <div class="icon">
                    <img src="~/content/hometemplate/img/bg-img/bb12.jpg" style="max-width:700px;max-height:700px;position:relative center;" />
                </div>

            </div>
        </div>
    </div>
}
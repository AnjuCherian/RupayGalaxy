@model Banking.Models.LoanViewModel

@{
    ViewBag.Title = "FixedStatistics";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <script src=https://cdnjs.cloudflare.com/ajax/libs/canvasjs/1.7.0/canvasjs.min.js></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <script type="text/javascript">

    $(function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "light2",
            animationEnabled: true,
            title: {
                text: "Column Chart"
            },
            data: [
            {
                type: "column",
                dataPoints: @Html.Raw(Model.DataPoints),
            }
            ]
        });
        chart.render();
    });
    </script>
    <style>
        label {
            background-color: lightblue;
        }
 </style>
</head>
<body>

    <div class="form-group">
        <h3>Fixed Statistics</h3>
        <hr />
        <div>
            <table class="table table-bordered">
                <tr>
                    <th>
                        <label>Bank</label>
                    </th>
                    <th>
                        <label>FD Rate of Interest</label>
                    </th>
                    <th>
                        <label>Senior Citizen FD Rates</label>
                    </th>
                </tr>

                @foreach (var item in Model.LoansDetailsList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BankName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InterestRates)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProcessingFee)
                        </td>
                    </tr>
                }

            </table>

        </div>
        <div id="chartContainer" style="height: 370px; width: 100%;"></div>
    </div>
</body>
</html>

